<!DOCTYPE html>
<html lang="tr">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Site Yönetim Sistemi</title>


	<!-- Google Font: Source Sans Pro -->
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
	<!-- Font Awesome -->
	<link rel="stylesheet" href="/Admin/plugins/fontawesome-free/css/all.min.css">
	<!-- Ionicons -->
	<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
	<!-- Tempusdominus Bootstrap 4 -->
	<link rel="stylesheet" href="/Admin/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
	<!-- iCheck -->
	<link rel="stylesheet" href="/Admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
	<!-- JQVMap -->
	<link rel="stylesheet" href="/Admin/plugins/jqvmap/jqvmap.min.css">
	<!-- Theme style -->
	<link rel="stylesheet" href="/Admin/dist/css/adminlte.min.css">
	<!-- overlayScrollbars -->
	<link rel="stylesheet" href="/Admin/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
	<!-- Daterange picker -->
	<link rel="stylesheet" href="/Admin/plugins/daterangepicker/daterangepicker.css">
	<!-- summernote -->
	<link rel="stylesheet" href="/Admin/plugins/summernote/summernote-bs4.min.css">

	@RenderSection("Head", false)

	<!--jconfirm-->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
	<!--jconfirm-->
	<link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="hold-transition sidebar-mini layout-fixed">
	<div class="wrapper">

		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
			<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
					<a asp-controller="Home" asp-action="Index" class="nav-link">Ana Sayfa</a>
				</li>
				@*<li class="nav-item d-none d-sm-inline-block">
					<a href="#" class="nav-link">Contact</a>
					</li>*@
			</ul>



			<!-- Right navbar links -->
			<ul class="navbar-nav ml-auto">



				<li class="nav-item">
					<a class="nav-link" data-widget="fullscreen" href="#" role="button">
						<i class="fas fa-expand-arrows-alt"></i>
					</a>
				</li>
				@*<li class="nav-item">
					<a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
					<i class="fas fa-th-large"></i>
					</a>
					</li>*@
			</ul>
		</nav>
		<!-- /.navbar -->
		<!-- Main Sidebar Container -->
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
			<!-- Brand Logo -->
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="brand-link">

				<span class="brand-text font-weight-light">Site Yönetim Sistemi</span>
			</a>

			<!-- Sidebar -->
			<div class="sidebar">
				<!-- Sidebar user panel (optional) -->
				<div class="user-panel mt-3 pb-3 mb-3 d-flex">
					<div class="image">
						<img src="/Admin/dist/img/AdminLTELogo.png" class="img-circle elevation-2" alt="User Image">
					</div>
					<div class="info">
						<a href="#" class="d-block">Ömer YAVAŞ</a>
					</div>
				</div>


				<!-- Sidebar Menu -->
				<nav class="mt-2">
					<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
						<!-- Add icons to the links using the .nav-icon class
						with font-awesome or any other icon font library -->
							<li class="nav-item @Html.ActiveClass("Account",null,"menu-open")">
							<a href="#" class="nav-link @Html.ActiveClass("Account")">
								<i class="nav-icon fas fa-list"></i>
								<p>
									Kullanıcı İşlemleri
									<i class="right fas fa-angle-left"></i>
								</p>
							</a>
							<ul class="nav nav-treeview">
								<li class="nav-item">
									<a asp-controller="Account" asp-action="Index" class="nav-link @Html.ActiveClass("Account","Index")">
										<i class="far fa-circle nav-icon"></i>
										<p>Kullanıcı Listesi</p>
									</a>
								</li>
								<li class="nav-item">
									<a asp-controller="Account" asp-action="Add" class="nav-link @Html.ActiveClass("Account","Add")">
										<i class="far fa-circle nav-icon"></i>
										<p>Yeni Kullanıcı</p>
									</a>
								</li>
							</ul>
						</li>
						<li class="nav-item @Html.ActiveClass("Block",null,"menu-open")">
							<a href="#" class="nav-link @Html.ActiveClass("Block")">
								<i class="nav-icon fas fa-list"></i>
								<p>
									Blok İşlemleri
									<i class="right fas fa-angle-left"></i>
								</p>
							</a>
							<ul class="nav nav-treeview">
								<li class="nav-item">
									<a asp-controller="Block" asp-action="Index" class="nav-link @Html.ActiveClass("Block","Index")">
										<i class="far fa-circle nav-icon"></i>
										<p>Blok Listesi</p>
									</a>
								</li>
								<li class="nav-item">
									<a asp-controller="Block" asp-action="Add" class="nav-link @Html.ActiveClass("Block","Add")">
										<i class="far fa-circle nav-icon"></i>
										<p>Yeni Blok</p>
									</a>
								</li>
							</ul>
						</li>

						<li class="nav-item @Html.ActiveClass("Apartment",null,"menu-open")">
							<a href="#" class="nav-link @Html.ActiveClass("Apartment")">
								<i class="nav-icon fas fa-list"></i>
								<p>
									Daire İşlemleri
									<i class="right fas fa-angle-left"></i>
								</p>
							</a>
							<ul class="nav nav-treeview">
								<li class="nav-item">
									<a asp-controller="Apartment" asp-action="Index" class="nav-link @Html.ActiveClass("Apartment","Index")">
										<i class="far fa-circle nav-icon"></i>
										<p>Daire Listesi</p>
									</a>
								</li>
								<li class="nav-item">
									<a asp-controller="Apartment" asp-action="Add" class="nav-link @Html.ActiveClass("Apartment","Add")">
										<i class="far fa-circle nav-icon"></i>
										<p>Yeni Daire</p>
									</a>
								</li>
							</ul>
						</li>
					
						<li class="nav-item @Html.ActiveClass("ApartmentExpense",null,"menu-open")">
							<a href="#" class="nav-link @Html.ActiveClass("ApartmentExpense")">
								<i class="nav-icon fas fa-list"></i>
								<p>
									Gelir/Gider İşlemleri
									<i class="right fas fa-angle-left"></i>
								</p>
							</a>
							<ul class="nav nav-treeview">
								<li class="nav-item">
									<a asp-controller="ApartmentExpense" asp-action="Index" class="nav-link @Html.ActiveClass("ApartmentExpense","Index")">
										<i class="far fa-circle nav-icon"></i>
										<p>Kullanıcılara Ait Faturalar</p>
									</a>
								</li>
								<li class="nav-item">
									<a asp-controller="ApartmentExpense" asp-action="Add" class="nav-link @Html.ActiveClass("ApartmentExpense","Add")">
										<i class="far fa-circle nav-icon"></i>
										<p>Kullanıcıya Fatura Tanımla</p>
									</a>
								</li>
								<li class="nav-item">
									<a asp-controller="Case" asp-action="Index" class="nav-link @Html.ActiveClass("Case","Index")">
										<i class="far fa-circle nav-icon"></i>
										<p>Gelen Ödemeler</p>
									</a>
								</li>
							</ul>
						</li>

						<li class="nav-item ">
							<a asp-area="" asp-controller="Message" asp-action="Index" class="nav-link @Html.ActiveClass("Message","Index")">
								<i class="far fa-envelope mr-2"></i>
								@await Component.InvokeAsync("Message")
							</a>
						</li>
						<li class="nav-item ">
							<a asp-area="" asp-controller="Account" asp-action="LogOut" class="nav-link">
								<i class="far  fas fa-list mr-2"></i>
								<p>
									Çıkış Yap
								</p>
							</a>
						</li>

					</ul>
				</nav>
				<!-- /.sidebar-menu -->
			</div>
			<!-- /.sidebar -->
		</aside>

		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			@RenderBody()
		</div>
		<!-- /.content-wrapper -->
		<footer class="main-footer">
			<strong>Copyright &copy; 2021 <a href="#">Ömer YAVAŞ</a>.</strong>
			Tüm Hakları Saklıdır.
			<div class="float-right d-none d-sm-inline-block">
				@*<b>Version</b> 3.1.0-rc*@
			</div>
		</footer>

		<!-- Control Sidebar -->
		<aside class="control-sidebar control-sidebar-dark">
			<!-- Control sidebar content goes here -->
		</aside>
		<!-- /.control-sidebar -->
	</div>
	<!-- ./wrapper -->
	<script src="~/lib/jquery/dist/jquery.js"></script>

	<!-- Bootstrap 4 -->
	<script src="/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
	<!-- ChartJS -->
	<!-- Tempusdominus Bootstrap 4 -->
	<script src="/Admin/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>

	<!-- overlayScrollbars -->
	<script src="/Admin/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
	<!-- AdminLTE App -->
	<script src="/Admin/dist/js/adminlte.js"></script>
	<!-- AdminLTE for demo purposes -->
	<script src="/Admin/dist/js/demo.js"></script>
	<!-- AdminLTE dashboard demo (This is only for demo purposes) -->
	<script src="/Admin/dist/js/pages/dashboard.js"></script>

	<!--jconfirm-->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
	<!--jconfirm-->

	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/site.js"></script>

	@RenderSection("Scripts", required: false)

	<partial name="_ClientSideMessagePartial" />
</body>
</html>
