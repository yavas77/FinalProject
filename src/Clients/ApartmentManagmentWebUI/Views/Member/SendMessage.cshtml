@model AddMessageModel
@{
    ViewData["Title"] = "Add";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0">Blok Ekle</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form asp-area="" asp-action="SendMessage" method="post" class="w-75 mx-auto mt-2 p-2">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label class="col-form-label" asp-for="Title"></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                             <div class="form-group">
                                <label class="col-form-label" asp-for="Content"></label>
                                <textarea asp-for="Content" id="Message" class="form-control" style="height: 600px">                                           
                                 </textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                                                      

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

@section Scripts{
    <script src="~/admin/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            //Add text editor
            $('#Message').summernote({
                tabsize: 2,
                height: 300
            });
        })
    </script>
}
